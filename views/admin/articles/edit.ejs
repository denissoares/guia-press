<%- include('../../partials/header.ejs') %> <%-
include('../../partials/navbar.ejs') %>
<body>
  <div class="container">
    <hr />
    <div class="card">
      <div class="card-header"><h2>Edição de Categoria</h2></div>
      <div class="card-body">
        <form method="POST" action="/articles/update" style="display: inline;">
          <input
            class="form-control"
            type="text"
            name="title"
            placeholder="Defina o título da categoria"
            value="<%= article.title %>"
          />
          <br />
          <input type="hidden" name="id" value="<%= article.id %>" />
          <br />
          <textarea
            class="form-control"
            placeholder="Escreva seu artigo aqui!"
            name="body"
            id="article"
          >
<%- article.body %></textarea
          >
          <br />
          <label name="article">Categoria</label>
          <select name="category" class="form-control">
            <!-- prettier-ignore -->
            <% categories.forEach((category) => { %>
            <% if(category.id === article.categoryId)  { %>
            <option value="<%= category.id %>" selected
              ><%= category.title %></option
            >
            <% } else { %>
            <option value="<%= category.id %>"><%= category.title %></option>
            <% } %> <% }) %>
          </select>
          <br />
          <br />
          <button class="btn btn-success">Atualizar</button>
        </form>
        <a href="/admin/articles" class="btn btn-warning">Cancelar</a>
      </div>
    </div>
  </div>
</body>

<%- include('../../partials/footer.ejs') %>
<script src="/tinymce/tinymce.min.js"></script>
<script>
  tinymce.init({
    selector: '#article',
    plugins: [
      'advlist autolink link image lists print preview hr searchreplace wordcount fullscreen insertdatetime media save table paste emoticons',
    ],
    language: 'pt_BR',
  });
</script>
